version: '3'

services:
  app:
    image: node:19-alpine
    command: sh -c "npm start"
    ports:
      - 127.0.0.1:3001:3000
    working_dir: /app
    volumes:
      - ./:/app
    environment:
      MYSQL_HOST: mdb
      MYSQL_USER: root
      MYSQL_PASSWORD: Password123!
      MYSQL_DB: mariadb_is_awesome

    networks:
      - my-network

networks:
  my-network:
    driver: bridge
